@model LaLlamaDelBosque.Models.Department

@if(Model?.Id != null)
{
    <h6>¿Desea eliminar a este Departamento?</h6>
    <form asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <input type="button" onclick="location.href='@Url.Action("Index", "Department")'" value="Cancelar" class="btn btn-secondary" />
    </form>
}
